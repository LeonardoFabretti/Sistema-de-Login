# Configurações do Servidor
NODE_ENV=development
PORT=5000

# Banco de Dados PostgreSQL
# IMPORTANTE: Esta URL deve ser colocada no arquivo .env (NÃO commitar no Git)
# Formato: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:sua_senha@localhost:5432/auth_system

# Secrets para JWT (GERAR VALORES ALEATÓRIOS FORTES EM PRODUÇÃO)
JWT_SECRET=seu_secret_super_seguro_aqui_min_256_bits
JWT_EXPIRE=30m
JWT_REFRESH_SECRET=outro_secret_diferente_para_refresh_token
JWT_REFRESH_EXPIRE=7d

# Configurações de Email (opcional)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=seu_usuario
EMAIL_PASSWORD=sua_senha
EMAIL_FROM=noreply@seuapp.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Bcrypt
BCRYPT_ROUNDS=12
