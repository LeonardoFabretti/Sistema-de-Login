# Configurações do Servidor
NODE_ENV=development
PORT=5000

# Banco de Dados PostgreSQL
# IMPORTANTE: Esta URL deve ser colocada no arquivo .env (NÃO commitar no Git)
# Formato: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:sua_senha@localhost:5432/auth_system

# Secrets para JWT (GERAR VALORES ALEATÓRIOS FORTES EM PRODUÇÃO)
JWT_SECRET=seu_secret_super_seguro_aqui_min_256_bits
JWT_EXPIRE=30m
JWT_REFRESH_SECRET=outro_secret_diferente_para_refresh_token
JWT_REFRESH_EXPIRE=7d

# Configurações de Email (OBRIGATÓRIO PARA RECUPERAÇÃO DE SENHA)
# Exemplos de configuração:
#
# Gmail:
# EMAIL_HOST=smtp.gmail.com
# PORTA_DE_EMAIL=587
# USUÁRIO_DE_EMAIL=seu.email@gmail.com
# SENHA_DE_EMAIL=sua_senha_de_app (não use senha normal, crie uma senha de app)
# E_MAIL_DE=seu.email@gmail.com
#
# Mailtrap (desenvolvimento):
# EMAIL_HOST=smtp.mailtrap.io
# PORTA_DE_EMAIL=2525
# USUÁRIO_DE_EMAIL=seu_usuario_mailtrap
# SENHA_DE_EMAIL=sua_senha_mailtrap
# E_MAIL_DE=noreply@seuapp.com
#
EMAIL_HOST=smtp.mailtrap.io
PORTA_DE_EMAIL=2525
USUÁRIO_DE_EMAIL=seu_usuario
SENHA_DE_EMAIL=sua_senha
E_MAIL_DE=noreply@seuapp.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Bcrypt
BCRYPT_ROUNDS=12

# Frontend URL (para emails)
FRONTEND_URL=http://localhost:3000
